!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}
    %link{:rel => 'stylesheet', :href=>'public/css/custom.css', :type=>'text/css'}
    %title RPS con Haml.
  %body
    
    #header.container_12
      .grid_12
        %h1 Rock, Paper & Scissors
    
    
    - if !player_throw

      #header.container_12
        .grid_12    
    
          %h2 You vs Computer

          %p    
            .figure

              Choose one:
              %img{:src => 'public/images/animado.gif'}
              %p    
                %a{:href => '?choice=rock'} Rock
                %a{:href => '?choice=paper'} Paper
                %a{:href => '?choice=scissors'} Scissors            
                        
    - else
      %h2
      
      #result.container_12
        .grid_12      
          %br
            .figure2
              = resultado             

        .grid_2      
          .figure3
            = answer
        
        .grid_8    
          %atras
            %a{:href=>'/'}
              %img{:src=> 'public/images/atras.gif'}  